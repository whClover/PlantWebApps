@{
    @using System.Data;
}

<div class="modal fade" id="evalSummaryModal" tabindex="-1" aria-labelledby="evalSummaryModal" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="statusModal">Eval Summary</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="evalSummaryText" class="d-flex flex-column" contenteditable="true">
                </div>
            </div>
            <div class="modal-footer">
            </div>
        </div>
    </div>
</div>