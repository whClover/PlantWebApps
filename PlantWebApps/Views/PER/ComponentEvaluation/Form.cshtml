@{
	@using System.Data;
	ViewData["Title"] = "Component Evaluation EDIT";
}

<form method="post" action="/JobDispatch/Save">
	<div class="row">
		<div class="col-12">
			<div class="card">
				<div class="card-header">
					<h5 class="card-title">Component Evaluation EDIT</h5>
				</div>
				<div class="card-body">
					<div class="d-flex flex-column">
						<div class="d-flex">
							<partial name="Form/FirstColumn.cshtml" />
							<partial name="Form/SecondColumn.cshtml" />
						</div>
						@* BUTTON *@
						<div class="align-items-center mt-3 d-flex" style="gap: 10px;">
							<div class="align-items-center d-flex" style="gap: 10px;">
								<button type="submit" class="btn btn-sm btn-primary">
									COPY TO JDE
								</button>
								<button type="submit" class="btn btn-sm btn-primary">
									PRINT
								</button>
								<button type="submit" class="btn btn-sm btn-primary">
									PRINT EVAL
								</button>
								<div class="form-check">
									<input class="form-check-input" type="checkbox">
									<label class="form-check-label">
										To File
									</label>
								</div>
							</div>
							<div class="ms-auto">
								<button type="submit" class="btn btn-sm btn-primary">
									SAVE
								</button>
								<a class="btn btn-sm btn-primary" href="/JobDispatch">
									CLOSE
								</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</form>