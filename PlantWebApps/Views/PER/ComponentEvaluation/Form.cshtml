            data.SysTypeID = "123";
            data.RootCauseCode = $("#tRootCauseCode").val();
            data.SysFailCode = $("#tSysFailCode").val();
            data.RecCode = $("#tRecCode").val();
            data.M1 = $("#tM1").val();
            data.M2 = $("#tM2").val();
            data.M3 = $("#tM3").val();
