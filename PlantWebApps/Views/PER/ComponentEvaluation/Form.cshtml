            data.M7 = $("#tM7").val();
            data.M8 = $("#tM8").val();
            data.M9 = $("#tM9").val();
            data.M10 = $("#tM10").val();
            data.M11 = $("#tM11").val();
            data.M12 = $("#tM12").val();
            data.M13 = $("#tM13").val();
            data.M14 = $("#tM14").val();
            data.M15 = $("#tM15").val();
            data.M16 = $("#tM16").val();
            data.M17 = $("#tM17").val();
            data.M18 = $("#tM18").val();
            data.M19 = $("#tM19").val();
            data.M20 = $("#tM20").val();
            data.M21 = $("#tM21").val();
