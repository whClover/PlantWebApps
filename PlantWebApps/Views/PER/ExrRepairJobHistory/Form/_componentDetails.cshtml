@{
    @using System.Data;
}

<div class="col border">
    <div class="m-3 d-flex flex-column fw-bold" style="gap: 10px;">
    <p class="fs-5">Component Details</p>
    <div class="container overflow-hidden">
        <div class="row align-items-center">
            <div class="col-2 fs-6">OffSite WO*</div>
            <input type="text" class="col-10" />
        </div>
    </div>
    <div class="container overflow-hidden">
        <div class="row align-items-center">
            <div class="col-2 fs-6">Cost Before</div>
            <input type="text" class="col-6" placeholder="0.00"/>
            <select name="" class="form-select col-3 ms-3" style="max-width: 165px;">
                <option value=""></option>
                @foreach (DataRow row in ViewBag.currency.Rows)
                {
                    var currid = row["CurrID"].ToString();
                        <option value="@currid">@currid</option>
                }
            </select>
        </div>
    </div>
    <div class="container overflow-hidden">
        <div class="row align-items-center">
            <div class="col-2 fs-6">Cost Revision</div>
            <input type="text" class="col-10" placeholder="0.00" />
        </div>
    </div>
    <div class="container overflow-hidden">
        <div class="row align-items-center">
            <div class="col-2 fs-6">Saving Cost</div>
            <input type="text" class="col-10" />
        </div>
    </div>
    <div class="container overflow-hidden">
        <div class="row align-items-center">
            <div class="col-2 fs-6">Saving Cat</div>
            <select name="" class="col-10" disabled>
                <option value=""></option>
                @foreach (DataRow row in ViewBag.tsavingcost.Rows)
                {
                    var savingcostid = row["SavingCostCatID"].ToString();
                    var savingcostcategory = row["SavingCostCategory"].ToString();
                    <option value="@savingcostid">@savingcostcategory</option>
                }
            </select>
        </div>
    </div>
    <div class="container overflow-hidden">
        <div class="row align-items-center">
            <div class="col-2 fs-6">Add Cost</div>
            <select name="" class="col-10">
                <option value=""></option>
                <option value="1">Y</option>
                <option value="2">N</option>
            </select>
        </div>
    </div>
    <div class="container overflow-hidden">
        <div class="row align-items-center">
            <div class="col-2 fs-6">Cost RTS</div>
            <input type="text" class="col-8" />
            <div class="fw-bold col-2">USD</div>
        </div>
    </div>
    <div class="container overflow-hidden">
        <div class="row align-items-center">
            <div class="col-2 fs-6">OR Number</div>
            <input type="text" class="col-10" />
