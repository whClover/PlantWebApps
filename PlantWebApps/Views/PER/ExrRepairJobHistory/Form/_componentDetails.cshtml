            <label class="form-check-label fs-5 col-1 pt-1" for="reqStandY">Y</label>
            <input class="form-check-input col-1" name="reqStand" type="radio" id="reqStandN">
            <label class="form-check-label fs-5 col-1 pt-1" for="reqStandN">N</label>
