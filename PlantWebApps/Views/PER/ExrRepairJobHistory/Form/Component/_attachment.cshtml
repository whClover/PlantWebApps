@{
    @using System.Data;
}

<div class="col border" >
    <div class="m-3 d-flex flex-column fw-bold" style="gap: 10px;">
        <p class="fs-5">Attachment</p>
        <div class="table-responsive">
            <table class="table table-sm table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Attachment Type</th>
                        <th>File Path</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (DataRow row in ViewBag.ListAttachment.Rows)
                    {
                        <tr>
                            <td>@row["AttachmentType"]</td>
                            <td>@row["FilePath"]</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>