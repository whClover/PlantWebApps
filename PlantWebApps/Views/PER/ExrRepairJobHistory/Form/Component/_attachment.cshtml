@{
    @using System.Data;
}

<div class="col border">
    <div class="m-3 d-flex flex-column fw-bold" style="gap: 10px;">
        <p class="fs-5">Attachment</p>
        <div id="tableContainer" class="table-responsive">
            <table id="myTable" class="table attachTable mb-0 table-sm table-striped table-bordered">
                <thead class="table-light">
                    <tr>
                        <th>AttachmentType</th>
                        <th>FilePath</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (DataRow row in ViewBag.ListAttachment.Rows)
                    {
                        <tr>
                            <td>@row["AttachmentType"]</td>
                            <td>@row["FilePath"]</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>