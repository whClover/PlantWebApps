<div class="col border">
    <div class="m-3 d-flex flex-column fw-bold" style="gap: 10px;">
        <p class="fs-5">Warranty Details</p>
        <div class="container overflow-hidden">
            <div class="row align-items-center">
                <div class="col-2  ">Warranty</div>
                <div class="col-3">
                    <select id="cbWarrantyResult" name="cbWarrantyResult" class="col-3 form-control form-control-sm select2">
                        <option value=""></option>
                        <option value="1">Accept</option>
                        <option value="2">Prorate</option>
                        <option value="3">Accept (Prorated Cost)</option>
                        <option value="3">Pending Evaluation</option>
                        <option value="3">Waiting FAR</option>
                    </select>
                </div>
                <div class="col-1"></div>
                <div class="col-2  ">Total Cost</div>
                <div class="col-3">
                    <input id="tCostRepair" name="tCostRepair" type="text" class="col-3 form-control form-control-sm" />
                </div>
            </div>
        </div>
        <div class="container overflow-hidden">
            <div class="row align-items-center">
                <div class="col-2  ">OEM Cost</div>
                <div class="col-3">
                    <input id="tOemCost" name="tOemCost" type="text" class="col-3 form-control form-control-sm" />
                </div>
                <div class="col-1"></div>
                <div class="col-2  ">TCI Cost</div>
                <div class="col-3">
                    <input id="tTCICost" name="tTCICost" type="text" class="col-3 form-control form-control-sm" />
                </div>
            </div>
        </div>
        <div class="container overflow-hidden">
            <div class="row align-items-center">
                <div class="col-2  ">WO Previous</div>
                <div class="col-3">
                    <input id="tWOPrevious" name="tWOPrevious" type="text" class="col-3 form-control form-control-sm" />
                </div>
                <div class="col-1"></div>
                <div class="col-2  ">OP Previous</div>
                <div class="col-3">
                    <input id="tOPPrevious" name="tOPPrevious" type="text" class="col-3 form-control form-control-sm" />
                </div>
            </div>
        </div>
        <div class="container overflow-hidden">
            <div class="row align-items-center">
                <div class="col-2  ">Internal WO Previous</div>
                <div class="col-3">
                    <input id="tIntWOPrevious" name="tIntWOPrevious" type="text" class="col-3 form-control form-control-sm" />
                </div>
                <div class="col-1"></div>
                <div class="col-2  ">Settlement Date</div>
                <div class="col-3">
                    <input id="tDecisionDate" name="tDecisionDate" type="Text" class="col-3 form-control form-control-sm datepicker-basic" />
                </div>
            </div>
        </div>
    </div>
</div>