@{
    @using System.Data;
}

<div class="col border">
    <div class="m-3 d-flex flex-column fw-bold" style="gap: 10px;">
        <p class="fs-5">Repair Details</p>
        <div class="container overflow-hidden">
            <div class="row align-items-center">
                <div class="col-2  ">CE ID</div>
                <input type="text" class="col-10" disabled/>
            </div>
        </div>
        <div class="container overflow-hidden">
            <div class="row align-items-center">
                <div class="col-2  ">TCI Comp ID</div>
                <input type="text" class="col-8" />
                <button type="button" class="btn btn-primary col-2 ms-2" style="max-width: 80px;">Create</button>
            </div>
        </div>
        <div class="container overflow-hidden">
            <div class="row align-items-center">
                <div class="col-2  ">Store</div>
                <select name="" class="col-10">
                    <option value=""></option>
                    @foreach (DataRow row in ViewBag.tdestination.Rows)
                    {
                        var storeid = row["StoreID"].ToString();
                        var storename = row["StoreName"].ToString();
                        <option value="@storeid">@storename</option>
                    }
                </select>
            </div>
        </div>
        <div class="container overflow-hidden">
            <div class="row align-items-center">
                <div class="col-2  ">Meter Run</div>
                <input type="text" class="col-10" />
            </div>
        </div>
        <div class="container overflow-hidden">
            <div class="row align-items-center">
                <div class="col-2  ">Meter To Run</div>
                <input type="text" class="col-10" />
            </div>
        </div>
        <div class="container overflow-hidden">
            <div class="row align-items-center">
                <div class="col-2  ">Internal WO</div>
                <input type="text" class="col-6" disabled/>
                <button type="button" class="btn btn-primary col-2 ms-2" style="max-width: 80px;">find</button>
                <button type="button" class="btn btn-primary col-2 ms-2" style="max-width: 80px;">upload</button>
            </div>
        </div>
        <div class="container overflow-hidden">
            <div class="row align-items-center">
                <div class="col-2  ">RR OR No</div>
                <input type="text" class="col-10" disabled/>
            </div>
        </div>
        <div class="container overflow-hidden">
            <div class="row align-items-center">
                <div class="col-2  ">RR OP No</div>
                <input type="text" class="col-10" disabled />
            </div>
        </div>
        <div class="container overflow-hidden">
            <div class="row align-items-center">
                <div class="col-2  ">Issued Date</div>
                <div class="col-10 d-flex" style="gap: 10px;">
                     <input type="text" class="form-control datepicker-basic ms-n2" style="max-width: 280px;" />
                     <input type="text" class="form-control" />
                </div>
            </div>
        </div>
        <div class="container overflow-hidden">
            <div class="row align-items-center">
                <div class="col-2  ">ST OT Number</div>
                <input type="text" class="col-10" disabled />
            </div>
        </div>
        <div class="container overflow-hidden">
            <div class="row align-items-center">
                <div class="col-2  ">WO Fit To Unit</div>
                <input type="text" class="col-10" disabled />
            </div>
        </div>
        <div class="container overflow-hidden">
            <div class="row align-items-center">
                <div class="col-2  ">Fit To Unit</div>
                <input type="text" class="col-10" disabled />
            </div>
        </div>
        <div class="container overflow-hidden">
            <div class="row align-items-center">
                <div class="col-2  ">Received</div>
                <div class="col-10 row" style="gap: 10px;">
                    <input type="Text" class="col-8 datepicker-basic" style="max-width: 280px;" />
                    <input type="text" class="col-4" />
                </div>
            </div>
        </div>
        <div class="container overflow-hidden">
            <div class="row align-items-center">
                <div class="col-2  ">Received By</div>
                <input type="text" class="col-8" />
                <div class="fw-bold col-2">Supplier</div>
            </div>
        </div>
        <div class="container overflow-hidden">
            <div class="row align-items-center">
                <div class="col-2  ">DN Number</div>
                <input type="text" class="col-10" disabled />
            </div>
        </div>
        <div class="container overflow-hidden">
            <div class="row align-items-center">
                <div class="col-2  ">Tagging Date</div>
                <input type="text" class="col-10" disabled />
            </div>
        </div>
    </div>
</div>
