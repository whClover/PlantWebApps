@{
    @using System.Data;
}

<div class="col border">
    <div class="m-3 d-flex flex-column fw-bold" style="gap: 10px;">
        <p class="fs-5">Dispatch Detail</p>
        <div class="d-flex justify-content-around" style="gap: 10px;">
            <button type="button" class="btn btn-secondary" id="CDispatchAdd" name="CDispatchAdd">Add</button>
            <button type="button" class="btn btn-secondary" id="CDispatchEdit" name="CDispatchEdit">Edit</button>
            <button type="button" class="btn btn-secondary" id="CDispatchDel" name="CDispatchDel">Delete</button>
            <button type="button" class="btn btn-secondary" id="CANMainModule" name="CANMainModule">AN Dispatch</button>
            <button type="button" class="btn btn-secondary" id="CDispatchView" name="CDispatchView">View</button>
        </div>
        <div id="LDispatch" name="LDispatch" class="table-responsive">
            <table class="table table-sm table-hover">
                <thead class="table-light">
                    <tr>
                        <th>ANNO</th>
                        <th>Type</th>
                        <th>Attention</th>
                        <th>Status</th>
                        <th>RegisterBy</th>
                        <th>Registerdate</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (DataRow row in ViewBag.ListDispatch.Rows)
                    {
                        <tr>
                            <td>
                                <button type="button" class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#anDetailModal">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                        <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                        <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z" />
                                    </svg>
                                </button>
                            </td>
                            <td>@row["ANNO"]</td>
                            <td>@row["Type"]</td>
                            <td>@row["Attention"]</td>
                            <td>@row["Status"]</td>
                            <td>@row["RegisterBy"]</td>
                            <td>@row["Registerdate"]</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<partial name="~/Views/JobDispatch/_modalAnDetail.cshtml" />