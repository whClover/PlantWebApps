@{
    @using System.Data;
}

<div class="col border">
    <div class="m-3 d-flex flex-column fw-bold" style="gap: 10px;">
        <p class="fs-5">Repair Status / Allocation</p>
        <div class="container overflow-hidden">
            <div class="row align-items-center">
                <div class="col-2 fs-6">OffSite WO*</div>
                <input type="text" class="col-10" />
            </div>
        </div>
        <div class="container overflow-hidden">
            <div class="row align-items-center">
                <div class="col-2 fs-6">Site Alloc</div>
                <select name="" class="col-10">
                    <option value=""></option>
                    @foreach (DataRow row in ViewBag.tsitealloc.Rows)
                    {
                        var location = row["Location"].ToString();
                        var locationName = row["LocationName"].ToString();
                        <option value="@location">@locationName | @location</option>
                    }
                </select>
            </div>
        </div>
        <div class="container overflow-hidden">
            <div class="row align-items-center">
                <div class="col-2 fs-6">WONO Alloc</div>
                <input type="text" class="col-3" />
                <div class="col-2 fs-6">UnitNo Alloc</div>
                <input type="text" class="col-3" />
            </div>
        </div>
        <div class="container overflow-hidden">
            <div class="row align-items-center">
                <div class="col-2 fs-6">Sched Start</div>
                <input type="text" class="col-3" />
                <div class="col-2 fs-6">Store Alloc</div>
                <input type="text" class="col-3" />
            </div>
        </div>
        <div class="container overflow-hidden">
            <div class="row align-items-center">
                <div class="col-2 fs-6">Current SOH</div>
                <input type="text" class="col-10" />
            </div>
        </div>
        <div class="container overflow-hidden">
            <div class="row align-items-center">
                <div class="col-2 fs-6">Outsnd Req</div>
                <input type="text" class="col-10" />
            </div>
        </div>
    </div>
</div>