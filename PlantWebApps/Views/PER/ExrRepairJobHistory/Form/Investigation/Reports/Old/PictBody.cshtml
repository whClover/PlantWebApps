@{
    @using System.Data;
    Layout = "~/Views/Shared/_LayoutReport.cshtml";
}
<div>
    <table class="table mb-0 mt-2 table-sm table-hover">
        <thead class="table-light">
            <tr>
                <th>Image Name</th>
                <th>Image</th>
            </tr>
        </thead>
        <tbody>
            @foreach (DataRow row in ViewBag.data.Rows)
            {
                <tr height="558px">
                    <td>@row["PictureCaption"]</td>
                    <td><img src="@ViewBag.placeholder.ToString()" /></td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    tr, td, th, tbody, thead, tfoot {
        page-break-inside: avoid !important;
    }
</style>