@{
    @using System.Data;
    ViewData["Title"] = "Journal Detail";
}

<form method="post" enctype="multipart/form-data" asp-controller="JournalDetail">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Job Dispatch ADD</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex mb-3 align-items-center" style="gap: 10px">
                        <div class="text-nowrap fw-bold">AN Type</div>
                        <div style="width: 150px;">
                            <select class="form-control form-control-sm">
                                <option value="Select Data Type"></option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-sm btn-primary text-nowrap" formaction="">
                            GET DATA
                        </button>
                        <button type="submit" class="btn btn-sm btn-primary text-nowrap" formaction="">
                            EDIT
                        </button>
                        <button type="submit" class="btn btn-sm btn-primary text-nowrap" formaction="">
                            VIEW
                        </button>
                        <button type="submit" class="btn btn-sm btn-primary text-nowrap" formaction="">
                            EXPORT
                        </button>
                    </div>
                    @* save form *@
                    <div class="d-flex flex-column">
                        <div class="d-flex">
                            <div class="col-3 border">
                                <div class="m-3 d-flex flex-column fw-bold" style="gap: 10px;">
                                    <div>Job Information</div>
                                    <div class="container overflow-hidden">
                                        <div class="row align-items-center">
                                            <div class="col-4" style="font-size: 12px;">AN No*</div>
                                            <div class="col-8">
                                                <input type="Text" class="form-control form-control-sm" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="container overflow-hidden">
                                        <div class="row align-items-center">
                                            <div class="col-4" style="font-size: 12px;">Job Source</div>
                                            <div class="col-8">
                                                <select class="form-control form-control-sm select2" >
                                                    <option value=""></option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="container overflow-hidden">
                                        <div class="row align-items-center">
                                            <div class="col-4" style="font-size: 12px;">Attention to</div>
                                            <div class="col-8">
                                                <select class="form-control form-control-sm select2" >
                                                    <option value=""></option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            @* 2 section *@
                            <div class="col-3 border">
                                <div class="m-3 d-flex flex-column fw-bold" style="gap: 12px;">
                                    <div>Status Information</div>
                                    <div class="container overflow-hidden">
                                        <div class="row align-items-center">
                                            <div class="col-4" style="font-size: 12px;">Request By</div>
                                            <div class="col-4">
                                                <input type="Text" class="form-control form-control-sm datepicker-basic" />
                                            </div>
                                            <div class="col-4">
                                                <input type="Text" class="form-control form-control-sm datepicker-basic" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="container overflow-hidden">
                                        <div class="row align-items-center">
                                            <div class="col-4" style="font-size: 12px;">Accepted By</div>
                                            <div class="col-4">
                                                <input type="Text" class="form-control form-control-sm datepicker-basic" />
                                            </div>
                                            <div class="col-4">
                                                <input type="Text" class="form-control form-control-sm datepicker-basic" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between my-1 d-flex" style="gap: 10px;">
                            <div>
                                <button type="submit" class="btn btn-sm btn-primary" formaction="">
                                    SAVE
                                </button>
                                <a class="btn btn-sm btn-primary" href="/JobDispatch">
                                    CLOSE
                                </a>
                            </div>
                        </div>

                        @if (TempData.Peek("Msg") != null)
                        {
                            @section Scripts
                        {
                            <script>
                                Swal.fire({
                                    title: '@TempData.Peek("Msg")',
                                        icon: '@TempData.Peek("Stat")'
                                    });
                                </script>
                            }
                        }
                    </div>

                    <div id="tableContainer" class="table-responsive">
                        <table id="myTable" class="table datatable mb-0 table-sm table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Job ID</th>
                                    <th>Offsite WO</th>
                                    <th>Child WO</th>
                                    <th>Comp Type</th>
                                    <th>Comp Type</th>
                                    <th>Qty</th>
                                    <th>UOM</th>
                                    <th>TCIPartNo</th>
                                    <th>Description1</th>
                                    <th>RepairTypeID</th>
                                    <th>Remark</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>